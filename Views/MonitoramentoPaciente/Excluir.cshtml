@model WebApplication4.ViewModels.MonitoramentoPaciente.EditarMonitoramentoViewModel

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Excluir monitoramento</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="alert alert-danger">
        <span class="fas fa-warning"></span>
        Deseja realmente excluir este registro de monitoramento do paciente?
    </div>
    <div class="row">
        <div class="col-12">
            <form asp-action="Excluir">
                @Html.AntiForgeryToken()
                <div class="card card-outline card-danger">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="DataAfericao" class="control-label"></label>
                            <input asp-for="DataAfericao" class="form-control" readonly/>
                            <span asp-validation-for="DataAfericao" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col form-group">
                                <label asp-for="PressaoArterial" class="control-label"></label>
                                <input asp-for="PressaoArterial" class="form-control" readonly/>
                                <span asp-validation-for="PressaoArterial" class="text-danger"></span>
                            </div>
                            <div class="col form-group">
                                <label asp-for="Temperatura" class="control-label"></label>
                                <input asp-for="Temperatura" class="form-control" readonly/>
                                <span asp-validation-for="Temperatura" class="text-danger"></span>
                            </div>
                            <div class="col form-group">
                                <label asp-for="FrequenciaCardiaca" class="control-label"></label>
                                <input asp-for="FrequenciaCardiaca" class="form-control" readonly/>
                                <span asp-validation-for="FrequenciaCardiaca" class="text-danger"></span>
                            </div>
                            <div class="col form-group">
                                <label asp-for="SaturacaoOxigenio" class="control-label"></label>
                                <input asp-for="SaturacaoOxigenio" class="form-control" readonly/>
                                <span asp-validation-for="SaturacaoOxigenio" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <button type="submit" class="btn btn-danger">Excluir</button>
                    </div>
                </div>
            </form>
            <!-- /.card -->
        </div>
    </div>
</section>
<!-- /.content -->