@model WebApplication4.ViewModels.Medico.EditarMedicoViewModel

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Excluir médico</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    @if(ViewBag.TemConsultas)
    {
        <div class="alert alert-danger">
            <span class="fas fa-warning"></span>
            Este médico possui consultas vinculadas ao seu cadastro e não pode ser excluído.
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <span class="fas fa-warning"></span>
            Deseja realmente excluir o cadastro deste médico?
        </div>
    }
    <div class="row">
        <div class="col-12">
            <form asp-action="Excluir">
                @Html.AntiForgeryToken()
                <div class="card card-outline card-danger">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="CRM" class="control-label"></label>
                            <input asp-for="CRM" class="form-control" mask="99999999-9/AA" readonly />
                        </div>
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" readonly />
                        </div>
                    </div>
                    <!-- /.card-body -->
                    @if(!ViewBag.TemConsultas)
                    {
                        <div class="card-footer">
                            <button type="submit" class="btn btn-danger">Excluir</button>
                        </div>
                    }
                </div>
            </form>
            <!-- /.card -->
        </div>
    </div>
</section>
<!-- /.content -->