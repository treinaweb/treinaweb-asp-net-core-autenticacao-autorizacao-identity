@model IEnumerable<WebApplication4.ViewModels.Consulta.ListarConsultaViewModel>

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Consultas</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between">
                        <form asp-action="Index">
                            <div class="input-group input-group-sm" style="width: 300px;">
                                <input type="text" class="form-control" placeholder="Buscar consulta" name="filtro" value="@ViewBag.Filtro">

                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>

                        <a href="/consultas/adicionar" class="btn btn-outline-primary btn-sm">Nova consulta</a>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body table-responsive p-0">
                    <table class="table table-head-fixed text-nowrap">
                        <thead>
                            <tr>
                                <th style="width: 100px">Data</th>
                                <th>Paciente</th>
                                <th>Médico</th>
                                <th>Tipo</th>
                                <th style="width: 40px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var c in Model!)
                            {
                                <tr>
                                    <td>@c.Data.ToString("dd/MM/yyyy")</td>
                                    <td>@c.Paciente</td>
                                    <td>@c.Medico</td>
                                    <td>@c.Tipo</td>
                                    <td>
                                        <a href="/consultas/editar/@c.Id" class="btn btn-secondary btn-sm mr-1" title="Editar">
                                            <span class="fas fa-edit"></span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
                <div class="card-footer clearfix">
                    <ul class="pagination pagination-sm m-0 float-right">
                      @if(ViewBag.NumeroPagina > 1)
                      {
                          <li class="page-item"><a class="page-link" href="@Url.Action("Index", "Consultas", new { Filtro = ViewBag.Filtro, Pagina = ViewBag.NumeroPagina - 1 })">&laquo;</a></li>
                      }
                      <li class="page-item page-link">Página @ViewBag.NumeroPagina de @ViewBag.TotalPaginas</li>
                      @if(ViewBag.NumeroPagina < ViewBag.TotalPaginas)
                      {
                          <li class="page-item"><a class="page-link" href="@Url.Action("Index", "Consultas", new { Filtro = ViewBag.Filtro, Pagina = ViewBag.NumeroPagina + 1 })">&raquo;</a></li>
                      }
                    </ul>
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
<!-- /.content -->